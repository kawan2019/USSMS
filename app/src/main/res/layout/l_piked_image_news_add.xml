<?xml version="1.0" encoding="utf-8"?>
<!--This layout is required only if you are going to
show the list of selected images-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dig"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="90dp">

        <ImageView
            android:id="@+id/igv_card_pick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_image"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btnRemoveImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tv_notification_f_home"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name" />
</RelativeLayout>
</com.google.android.material.card.MaterialCardView>