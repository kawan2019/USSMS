<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/f_news_add_post"
    android:orientation="vertical"
    tools:context=".Fragment.News.NewsAddPost">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <com.tiper.MaterialSpinner
            android:id="@+id/spLevel_register"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:entries="@array/departments_array"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/background"
            app:spinnerMode="dropdown">
        </com.tiper.MaterialSpinner>
        <EditText
            android:id="@+id/ed_des_news_add"
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:padding="12dp"
            android:hint="@string/Descreption"
            android:layout_height="70dp"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_dig"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:scrollbars="horizontal"
        tools:ignore="MissingConstraints" />
<ImageButton
    android:id="@+id/igb_add_post_news_add"
    android:layout_width="90dp"
    android:layout_height="80dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:background="@drawable/bg_ig_add_image_news_add"
    android:src="@drawable/baseline_add_circle_outline_black_18dp"
    android:tint="#fff" />
    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_news_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="post"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
</LinearLayout>