<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="#00FFFFFF"
                android:tint="#000"
                android:src="@drawable/ic_home_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="HOME"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="22dp"/>
            <ImageButton
                android:id="@+id/filterIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:tint="#000"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_menu_send"
                android:layout_alignParentRight="true" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:id="@+id/Relative_f_home">
        <HorizontalScrollView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000000"
            app:chipStrokeColor="#2196F3"
            app:chipStrokeWidth="1dp"
            android:text="Computer 💻"/>
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                app:chipStrokeColor="#2196F3"
                android:padding="5dp"
                app:chipStrokeWidth="1dp"
                android:text="Law 👩‍⚖️"/>
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                app:chipStrokeColor="#2196F3"
                android:padding="5dp"
                app:chipStrokeWidth="1dp"
                android:text="Physic 👨🏻‍🔬"/>
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                app:chipStrokeColor="#2196F3"
                android:padding="5dp"
                app:chipStrokeWidth="1dp"
                android:text="English 🧑‍🏫"/>
            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:padding="5dp"
                app:chipStrokeColor="#2196F3"
                app:chipStrokeWidth="1dp"
                android:text="Arabic 👩‍🏫"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="5dp"
                    app:chipStrokeColor="#2196F3"
                    app:chipStrokeWidth="1dp"
                    android:text="Engineering 👷‍♀️"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="5dp"
                    app:chipStrokeColor="#2196F3"
                    app:chipStrokeWidth="1dp"
                    android:text="Social 🐫"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="5dp"
                    app:chipStrokeColor="#2196F3"
                    app:chipStrokeWidth="1dp"
                    android:text="Islamic👳🏼‍♂️"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_posts_news_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"/>

</LinearLayout>